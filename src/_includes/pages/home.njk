<style>
    .closed-deal-section {
        background-color: #323F32;
    }

    .deals-slider {
        max-height: 351px;
        overflow-y: scroll;
    }

    .deals-slider::-webkit-scrollbar {
        width: 4px;
    }

    .deals-slider::-webkit-scrollbar-track {
        background: #e9ede9;
    }

    .deals-slider::-webkit-scrollbar-thumb {
        background-color: #93aa93;
        border-radius: 0px;
        border: 0px solid #ffffff;
    }

    .color-deal {
        background-color: #4b594b;
    }

    .deal-title {
        font-family: commuters-sans, sans-serif;
