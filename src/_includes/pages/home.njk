    }

    .deal-scroll-top {
        stroke-opacity: 0.8;
        margin-right: -11.45px;
        transition: 0.25s;
    }

    .deal-scroll-bottom {
        stroke-opacity: 0.8;
        margin-top: 10px;
        margin-right: -11.45px;
        transition: 0.25s;
    }

    .deal-scroll-top:hover {
        stroke-opacity: 1;
        cursor: pointer;
        transition: 0.25s;
    }

    .deal-scroll-bottom:hover {
        stroke-opacity: 1;
        cursor: pointer;
        transition: 0.25s;
    }

    .glide__bullet {
        background-color: #E9EDE9;
        width: 30px;
        height: 2px;
        padding: 0 !important;
        margin: 5px !important;
    }

    .glide__bullet--active {
        background-color: #93AA93;
        width: 60px;
        height: 4px;
    }

    .testimonial-name {
        color: #93AA93;
    }

    .closed-deal-clip {
        background-color: #323F32;
        clip-path: polygon(0 0, 100% 0, 100% 30%, 100% 100%, 70% 100%, 10% 100%, 0% 50%, 0% 30%);
        padding: 25px 0 25px 0;
    }

    .closed-deal-img {
        background-image: url('{{ wpage.acf.closed_deal_section.image.url }}');
