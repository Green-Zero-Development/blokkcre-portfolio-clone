<div class="max-w-7xl mx-auto pt-32 pb-48 md:pb-24 px-3 md:px-8 xl:px-16">
    <h2 class="text-4xl sm:text-6xl text-darkgreen-500 text-center">Testimonials</h2>
    <div class="max-w-7xl mx-auto pb-12 px-3 md:px-8 xl:px-16 testimonial-section">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.5.x/dist/css/glide.core.min.css">
        <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.5.x"></script>
        <div
            x-data="{
                init() {
                    new Glide(this.$refs.glide, {
                        type: 'carousel',
                        perView: 3,
                        breakpoints: {
                            768: {
                                perView: 1,
                            },
                            992: {
                                perView: 2,
                            }
                        },
                    }).mount()
                },
            }"
        >
        <div x-ref="glide" class="glide relative px-6">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    {% for item in testimonials %}
                    <div class="">
                        <div class="">
                            <p class="text-base text-darkgreen-500 pt-8 pb-3 sm:pr-8 whitespace-pre-line">{{ item.acf.text | safe }}</p>
                        </div>
                        <h6 class="text-green-100 testimonial-name">- {{ item.acf.first_name }} {{ item.acf.last_name }}</h6>
                    </div>
                    {% endfor %}
                </ul>
            </div>

            <div class="hidden md:flex items-center w-full max-w-lg mx-auto pt-8" data-glide-el="controls">
